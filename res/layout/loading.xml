<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:gravity="center"
	android:padding="@dimen/dialog_msg_space"
	android:background="@drawable/loading_bkg" >
	
	<ProgressBar
	    android:layout_width="@dimen/dialog_loading_icon_size"
	    android:layout_height="@dimen/dialog_loading_icon_size"
	    android:indeterminate="false"
	    android:indeterminateDrawable="@drawable/loading_progress"
	     />

	<TextView
		android:id="@+id/loading_msg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/dialog_msg_space"
		android:textColor="@android:color/black"
		android:textSize="16sp" >
	</TextView>
</LinearLayout>
