<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:background="@drawable/tab_indicator_bkg" >
	
	<TextView
	    android:id="@+id/tab_indicator_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:textColor="@color/color_tab_txt"
	    android:textSize="@dimen/txt_tab_size"
	    android:singleLine="true"
	    android:ellipsize="marquee"
	    android:duplicateParentState="true" />

	<ImageView
	    android:layout_toRightOf="@id/tab_indicator_txt"
	    android:layout_alignTop="@id/tab_indicator_txt"
	    android:layout_marginLeft="3dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tab_indicator_img"
	    android:src="@drawable/ic_new_msg"
	    android:contentDescription="@null" />
</RelativeLayout>