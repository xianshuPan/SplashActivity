<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
		android:id="@+id/coach_info_detail_title_relative"
        style="@style/custom_title_style" >
		<ImageButton
			android:id="@+id/coach_info_detail_back"
			style="@style/top_bar_btn_style"
			android:contentDescription="@null"
			android:layout_alignParentLeft="true"
			android:src="@drawable/xbtn_back" />
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/str_coach_info_detail_title"
		    android:textColor="@color/color_title_txt"
		    android:textSize="@dimen/txt_title_size"
		    android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
		android:layout_below="@+id/coach_info_detail_title_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:background="#f0f1f5"
        android:scrollbars="vertical">
		<LinearLayout
		    
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
			

		    <!-- 显示头像、姓名、星级，-->
			<RelativeLayout
				android:background="@color/color_white"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    <LinearLayout 
			        android:gravity="center_horizontal"
			        android:layout_centerHorizontal="true"
			        android:layout_marginTop="10dp"
			        android:id="@+id/coach_info_detail_avatar_linear"
			        android:layout_width="wrap_content"
			        android:layout_height="120dp"
			        android:orientation="vertical">
			        
			         <com.hylg.igolf.ui.view.CircleImageView
            			android:id="@+id/coach_info_detail_avatar_image"
            			android:layout_width="60dp"
            			android:layout_height="60dp"
            			android:src="@drawable/avatar_null" />
			         <TextView 
			             android:layout_marginTop="5dp"
			             android:id="@+id/coach_info_detail_name_text"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="夏日蝉鸣"
			             android:textColor="@color/color_friend_item_praiser_name"/>
					<RatingBar 
					    android:layout_marginTop="5dp"
				        android:layout_width="wrap_content"
				        android:layout_height="14dp"
				        android:rating="3.5"
				        android:numStars="5"
				        android:stepSize="0.5"
				        style="@style/myratingbar"
				        android:isIndicator="true"
				        android:id="@+id/coach_info_detail_rating"/>
			        			        
			    </LinearLayout>
			    			
			</RelativeLayout>
			
			<LinearLayout 
			    android:background="@color/gray"
			    android:paddingTop="1px"
			    android:paddingBottom="1px"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:orientation="horizontal">
				
			    <LinearLayout 
			        android:id="@+id/coach_info_detail_home_linear"
			        android:background="@color/color_white"
			        android:layout_weight="1"
			        android:layout_marginRight="1px"
			        android:gravity="center"
			    	android:layout_width="match_parent"
			    	android:layout_height="match_parent"
			    	android:orientation="horizontal">
				    
			        <ImageView 
			            android:adjustViewBounds="true"
			            android:duplicateParentState="true"
			            android:layout_width="20dp"
			            android:layout_height="20dp"
			            android:src="@drawable/home"/>
			        <TextView 
			            android:layout_marginLeft="5dp"
			            android:text="我的详细"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"/>
			    
			    
				</LinearLayout>
				
			     <LinearLayout 
			         android:id="@+id/coach_info_detail_attention_linear"
			         android:background="@color/color_white"
			        android:layout_weight="1"
			        android:gravity="center"
			    	android:layout_width="match_parent"
			    	android:layout_height="match_parent"
			    	android:orientation="horizontal">
				    
			        <ImageView
						android:id="@+id/coach_info_detail_attention_image"
			            android:adjustViewBounds="true"
			            android:duplicateParentState="true"
			            android:layout_width="20dp"
			            android:layout_height="20dp"
			            android:src="@drawable/add"/>
			        <TextView
						android:id="@+id/coach_info_detail_attention_text"
			            android:layout_marginLeft="5dp"
			            android:text="关注"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"/>
			    
			    
				</LinearLayout>
			    
			    
			</LinearLayout>

			<!-- 学员评价 -->
			<RelativeLayout
			    android:layout_marginTop="@dimen/view_ver_distance"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/color_white" >
			    <View 
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
				<TextView
				    android:id="@+id/coach_info_detail_comments_title_text"
				    style="@style/setup_pre_txt_style"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:text="@string/str_coachers_info_student_comment" />
				
				<RelativeLayout
				    android:id="@+id/coach_info_detial_comments_ll"
				    style="@style/setup_info_ll_style"
				    android:paddingLeft="5dp"
				    android:layout_toRightOf="@id/coach_info_detail_comments_title_text" >
			        <ProgressBar 
			            android:layout_centerVertical="true"
					    android:id="@+id/coach_info_detail_comments_progress"
					    android:visibility="gone"
					    android:layout_width="20dp"
					    android:layout_height="20dp"
					    />
				    <include
				        android:id="@+id/coach_info_detail_comments_title_right"
						layout="@layout/include_arrow_enter"/>
				    <TextView
				        android:layout_width="match_parent"
				        android:layout_height="@dimen/reg_item_height"
				        android:gravity="left|center_vertical"
				        android:layout_toRightOf="@+id/coach_info_detail_comments_progress"
				        android:layout_toLeftOf="@id/coach_info_detail_comments_title_right"
					    android:id="@+id/coach_info_detail_comments_count_text" />
				</RelativeLayout>
				
				 <View 
				    android:layout_below="@+id/coach_info_detail_comments_title_text"
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
				<ListView 
				    android:layout_below="@+id/coach_info_detail_comments_title_text"
				    android:id="@+id/coach_info_detail_comments_list"
				    android:layout_height="wrap_content"
				    android:layout_width="match_parent"/>
			

			</RelativeLayout>
			
			<!-- 教练的常驻球场 -->
			<RelativeLayout
			    android:layout_marginTop="@dimen/view_ver_distance"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/color_white" >
			    <View 
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
				<TextView
				    android:id="@+id/coach_info_detail_place_title_text"
				    style="@style/setup_pre_txt_style"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:text="@string/str_coachers_info_place" />
				<RelativeLayout
				    android:id="@+id/coach_info_detail_place_ll"
				    style="@style/setup_info_ll_style"
				    android:paddingLeft="5dp"
				    android:layout_toRightOf="@id/coach_info_detail_place_title_text" >
				    <include
				        android:visibility="gone"
				        android:id="@+id/coach_info_detail_comments_title_right"
						layout="@layout/include_arrow_enter"/>
				    <TextView
						android:drawableLeft="@drawable/teaching_phone"
						android:layout_width="wrap_content"
				        style="@style/setup_info_select_style"
				        android:layout_alignParentRight="true"

					    android:id="@+id/coach_info_detail_place_phone_text" />
				</RelativeLayout>
				
				  <View 
				      android:layout_below="@+id/coach_info_detail_place_title_text"
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
				<RelativeLayout 
				    android:layout_below="@+id/coach_info_detail_place_title_text"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    >
				    
				    <ImageView 
				        android:id="@+id/coach_info_detail_place_location_image"
				        android:layout_marginLeft="20dp"
				        android:layout_marginTop="10dp"
				        android:layout_width="15dp"
				        android:layout_height="15dp"
				        android:src="@drawable/golfers_li_region"/>
				    
				    <TextView
						android:textSize="@dimen/txt_size_ml"
						android:textColor="@color/gray"
				        android:layout_marginLeft="5dp"
				        android:layout_marginTop="10dp"
				        android:layout_marginRight="10dp"
				        android:layout_toRightOf="@+id/coach_info_detail_place_location_image"
				        android:id="@+id/coach_info_detail_place_name_text"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"/>
				    
				    <TextView
						android:textSize="@dimen/txt_size_ml"
						android:textColor="@color/gray"
				        android:layout_marginLeft="5dp"
				        android:layout_marginTop="5dp"
				        android:layout_marginRight="10dp"
				        android:layout_below="@+id/coach_info_detail_place_name_text"
				        android:layout_toRightOf="@+id/coach_info_detail_place_location_image"
				        android:id="@+id/coach_info_detail_place_address_text"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"/>
				    
				    <ImageView 
				        android:visibility="gone"
				        android:layout_marginRight="16dp"
						android:contentDescription="@null"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/icon_arrow_enter"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true" />
				</RelativeLayout>

			</RelativeLayout>
			
			<!-- 教练的常驻球场 -->
			<RelativeLayout
			    android:layout_marginTop="@dimen/view_ver_distance"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/color_white" >
			    <View 
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
			    
			    <RelativeLayout 
			        android:id="@+id/coach_info_detail_teach_age_relative"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">
					<TextView
						android:layout_height="40dp"
				    	android:id="@+id/coach_info_detail_teach_age_title_text"
				    	style="@style/setup_pre_txt_style"
				    	android:layout_alignParentLeft="true"
				    	android:layout_alignParentTop="true"
				    	android:text="@string/str_coachers_apply_teach_age" />
				    <TextView
				        android:text="0"
						android:textColor="@color/gray"
						android:textSize="@dimen/txt_size_m"
				        android:layout_marginLeft="5dp"
						android:layout_width="match_parent"
				        android:layout_height="40dp"
				        android:gravity="left|center_vertical"
				        android:layout_toRightOf="@id/coach_info_detail_teach_age_title_text"
					    android:id="@+id/coach_info_detail_teach_age_content_text" />
				</RelativeLayout>
				
				 <View 
				     android:layout_below="@+id/coach_info_detail_teach_age_relative"
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
				  <RelativeLayout 
				      android:layout_below="@+id/coach_info_detail_teach_age_relative"
			        android:id="@+id/coach_info_detail_special_relative"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">
					<TextView
						android:layout_height="30dp"
				    	android:id="@+id/coach_info_detail_special_title_text"
				    	style="@style/setup_pre_txt_style"
				    	android:layout_alignParentLeft="true"
				    	android:layout_alignParentTop="true"
				    	android:text="@string/str_coachers_apply_special" />
				    <TextView
						android:paddingBottom="5dp"
						android:text="jingsadfsdfsdfsdf"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="10dp"
				        android:textSize="@dimen/txt_size_ml"
						android:textColor="@color/gray"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:gravity="left|center_vertical"
				        android:layout_below="@id/coach_info_detail_special_title_text"
					    android:id="@+id/coach_info_detail_special_content_text" />
				</RelativeLayout>
				
				<View
				     android:layout_below="@+id/coach_info_detail_special_relative"
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
				  	<LinearLayout
				      android:layout_below="@+id/coach_info_detail_special_relative"
			        	android:id="@+id/coach_info_detail_award_relative"
			        	android:layout_width="match_parent"
			        	android:layout_height="wrap_content">

						<RelativeLayout
							android:visibility="gone"
							android:id="@+id/coach_detail_info_award_relative"
							android:layout_marginLeft="10dp"
							android:layout_width="100dp"
							android:layout_height="120dp">

							<TextView
								android:layout_centerHorizontal="true"
								android:textSize="@dimen/txt_size_ml"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_marginBottom="5dp"
								android:id="@+id/coach_apply_info_award"
								android:textColor="@color/color_hint_txt"
								android:text="@string/str_coachers_apply_award" />

							<ImageView
								android:background="@color/gray"
								android:padding="1px"
									android:layout_below="@+id/coach_apply_info_award"
									android:layout_centerHorizontal="true"
									android:scaleType="fitXY"
									android:src="@drawable/addpic"
									android:id="@+id/coach_detail_info_award_selected_image"
									android:layout_width="match_parent"
									android:layout_height="match_parent"/>

						</RelativeLayout>


						<RelativeLayout
							android:visibility="gone"
							android:layout_toRightOf="@+id/coach_detail_info_award_relative"
							android:id="@+id/coach_detail_info_graduate_selected_relative"
							android:layout_marginLeft="10dp"
							android:layout_width="100dp"
							android:layout_height="120dp">

							<TextView
								android:layout_centerHorizontal="true"
								android:textSize="@dimen/txt_size_ml"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_marginBottom="5dp"
								android:id="@+id/coach_apply_info_graduate"
								android:textColor="@color/color_hint_txt"
								android:text="@string/str_coachers_apply_graduate" />


							<ImageView
								android:background="@color/gray"
								android:padding="1px"
								android:layout_below="@+id/coach_apply_info_graduate"
									android:scaleType="fitXY"
									android:src="@drawable/addpic"
									android:id="@+id/coach_detail_info_graduate_selected_image"
									android:layout_width="match_parent"
									android:layout_height="match_parent"/>
						</RelativeLayout>

						<RelativeLayout
							android:visibility="gone"
							android:layout_marginLeft="10dp"
							android:layout_toRightOf="@+id/coach_detail_info_graduate_selected_relative"
							android:id="@+id/coach_apply_info_certificate_selected_relative"
							android:layout_width="100dp"
							android:layout_height="120dp">
							<TextView
								android:textSize="@dimen/txt_size_ml"
								android:layout_centerHorizontal="true"
								android:id="@+id/coach_apply_info_certificate"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_marginBottom="5dp"
								android:textColor="@color/color_hint_txt"
								android:text="@string/str_coachers_apply_certificate" />

							<ImageView
								android:background="@color/gray"
								android:padding="1px"
								android:layout_below="@+id/coach_apply_info_certificate"
								android:scaleType="fitXY"
								android:src="@drawable/addpic"
								android:id="@+id/coach_detail_info_certificate_selected_image"
								android:layout_width="match_parent"
								android:layout_height="match_parent"/>


						</RelativeLayout>

				</LinearLayout>
				
				  <View
					  android:layout_marginTop="60dp"
				     android:layout_below="@+id/coach_info_detail_award_relative"
			    	android:layout_width="match_parent"
			    	android:layout_height="1dp" 
			    	android:background="@drawable/divider1"/>
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>


	<RelativeLayout
		android:layout_alignParentBottom="true"
		android:background="#f0f1f5"
		android:layout_width="match_parent"
		android:layout_height="60dp">

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@drawable/divider1"/>
		<TextView
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_centerVertical="true"
			android:textSize="@dimen/txt_title_size"
			android:id="@+id/coach_info_detail_invite_coach_text"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:text="约教练"
			android:textColor="@color/color_white"
			android:padding="5dp"
			android:gravity="center"
			android:background="@drawable/attented_color"/>
	</RelativeLayout>
</RelativeLayout>
