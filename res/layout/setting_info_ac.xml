<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout
		android:id="@+id/customer_info_head_relative"
		android:background="#0a8e55"
		style="@style/custom_title_style" >
		<ImageButton
			android:id="@+id/setting_back"
			style="@style/top_bar_btn_style"
			android:contentDescription="@null"
			android:layout_alignParentLeft="true"
			android:src="@drawable/xbtn_back" />
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/str_setting_title"
			android:textColor="@color/color_title_txt"
			android:textSize="@dimen/txt_title_size"
			android:layout_centerInParent="true" />

	</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="#e8e8e8"
        android:scrollbars="none">
		<LinearLayout
		    android:paddingBottom="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >

			<!-- -->
		    <LinearLayout
				android:layout_marginTop="10dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
				android:background="@color/color_white"
		        android:orientation="vertical">

				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@drawable/divider1" />

		        <RelativeLayout

					android:id="@+id/setting_base_info_relative"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >

					<com.hylg.igolf.ui.view.CircleImageView
						android:layout_marginLeft="20dp"
						android:id="@+id/setting_avatar_image"
						android:layout_width="40dp"
						android:src="@drawable/avatar_no_golfer"
						android:layout_height="40dp" />

		            <TextView
						android:layout_marginLeft="5dp"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/setting_avatar_image"
						android:textColor="@color/color_hint_txt"
						android:textSize="@dimen/txt_size_ml"
		                android:layout_width="wrap_content"
						android:layout_height="wrap_content"
		                android:text="@string/str_cusinfo_edit" />

		            <TextView
						android:layout_width="wrap_content"
		              	android:layout_alignParentRight="true"
		                style="@style/customer_info_content_txt_style"
		                 />
		        </RelativeLayout>

		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1px"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/divider1" />

		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/setting_rebind_phone_text"
						style="@style/customer_info_pre_txt_style"
		                android:drawableLeft="@drawable/binding_icon"
		                android:text="@string/str_cusinfo_rebind_phone" />

					<TextView
						style="@style/customer_info_content_txt_style"
						android:id="@+id/setting_rebind_phone_content_text"
						android:layout_toRightOf="@+id/setting_rebind_phone_text" />

		        </RelativeLayout>

		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1px"
		            android:layout_marginLeft="20dp"
		            android:background="@drawable/divider1" />

		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/setting_rebset_psw_title_text"
						style="@style/customer_info_pre_txt_style"
		                android:drawableLeft="@drawable/lock_icon"
		                android:text="@string/str_reset_do_title" />

		            <TextView
		                android:id="@+id/setting_rebset_psw_content_text"
						style="@style/customer_info_content_txt_style"
		                android:layout_toRightOf="@id/setting_rebset_psw_title_text"
		                 />
		        </RelativeLayout>


				<View
		            android:layout_width="match_parent"
		            android:layout_height="1px"
		            android:background="@drawable/divider1" />

		    </LinearLayout>


			<!--  -->
			<LinearLayout
				android:layout_marginTop="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:background="@color/color_white"
				android:orientation="vertical"
				android:layout_below="@+id/customer_info_other_linear">


				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@drawable/divider1" />


				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >

					<TextView
						android:id="@+id/setting_feedback_title_text"
						style="@style/customer_info_pre_txt_style"
						android:drawableLeft="@drawable/feedback_icon"
						android:text="@string/str_feedback" />

					<TextView
						android:id="@+id/setting_feedback_content_text"
						style="@style/customer_info_content_txt_style"
						android:layout_toRightOf="@id/setting_feedback_title_text"
						/>
				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:layout_marginLeft="20dp"
					android:background="@drawable/divider1" />

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >

					<TextView
						android:id="@+id/setting_about_title_text"
						style="@style/customer_info_pre_txt_style"
						android:drawableLeft="@drawable/about_icon"
						android:text="@string/str_about" />

					<TextView
						android:id="@+id/setting_about_content_text"
						style="@style/customer_info_content_txt_style"
						android:layout_toRightOf="@id/setting_about_title_text"
						/>
				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:layout_marginLeft="20dp"
					android:background="@drawable/divider1" />

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >

					<TextView
						android:id="@+id/setting_agreement_title_text"
						style="@style/customer_info_pre_txt_style"
						android:drawableLeft="@drawable/agreemen_icon"
						android:text="@string/str_agree_ment_title" />

					<TextView
						android:id="@+id/setting_agreement_content_text"
						android:layout_toRightOf="@+id/setting_agreement_title_text"
						style="@style/customer_info_content_txt_style"/>



				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:layout_marginLeft="20dp"
					android:background="@drawable/divider1" />

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >

					<TextView
						android:id="@+id/setting_hotline_title_text"
						style="@style/customer_info_pre_txt_style"
						android:drawableLeft="@drawable/hotline_icon"
						android:text="@string/str_hot_line" />

					<TextView
						android:id="@+id/setting_hotline_content_text"
						style="@style/customer_info_content_txt_style"
						android:text="@string/str_customer_service_phone"
						android:layout_toRightOf="@id/setting_hotline_title_text"
						/>
				</RelativeLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@drawable/divider1" />

			</LinearLayout>

			<TextView
				android:id="@+id/setting_exit_text"
				android:layout_height="40dp"
				android:gravity="center"
				android:textSize="@dimen/txt_size_m"
				android:textColor="@color/color_white"
				android:layout_width="match_parent"
				android:layout_margin="20dp"
				android:background="@drawable/exit_title_back"
				/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
