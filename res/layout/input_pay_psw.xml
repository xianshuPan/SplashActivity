<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:paddingBottom="10dp"
   >
   
     <!-- 标题栏 -->
     
     <RelativeLayout

         android:layout_marginTop="10dp"
         android:id="@+id/input_pay_pswRelative"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true">

            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现密码"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/register_check_numberText"
                android:layout_centerVertical="true"
                android:textSize="15sp"
            />
             <EditText
                 android:id="@+id/input_pay_pswEdit"
                 android:layout_toRightOf="@+id/register_check_numberText"
                 android:layout_centerVertical="true"
	             android:layout_width="fill_parent"
	             android:hint="请输入提现密码"
	             android:inputType="textPassword"
	             android:textSize="15sp"
	             android:textColor="#C3C3C3"
	             android:maxLines="1"
	             android:layout_height="35dp"
	             android:layout_marginLeft="15dp"
                 android:layout_marginRight="15dp"
	             android:paddingLeft="5dp"
	             android:background="@drawable/xbtn_show"/>
     </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/input_pay_pswRelative"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@drawable/divider1"/>

    <TextView
        android:layout_below="@+id/input_pay_pswRelative"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:textColor="#1baae0"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/input_pay_psw_forgot_text"
        android:layout_centerVertical="true"
        android:textSize="13sp"/>

  </RelativeLayout>