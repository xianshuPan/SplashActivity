<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/personal_center_titleRelative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <com.hylg.igolf.ui.view.CircleImageView
            android:id="@+id/customer_info_my_follower_headImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/avatar_null" />

        <RelativeLayout
            android:id="@+id/personal_center_title_nameLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/customer_info_my_follower_headImage"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/customer_info_my_follower_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="剑走偏锋"
                android:textColor="@color/color_hint_txt"
                android:textSize="@dimen/txt_size_ml" />

            <TextView
                android:textSize="15sp"
                android:layout_below="@+id/customer_info_my_follower_nameText"
                android:id="@+id/customer_info_my_follower_dynamicText"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="139****6567" />


            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/alpha"
                android:src="@drawable/pin_un"
                android:layout_alignParentRight="true"
                android:id="@+id/contact_select"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical" />

            <TextView

                android:text="已关注"
               	android:gravity="center"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:id="@+id/customer_info_my_follower_is_attention_text"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>