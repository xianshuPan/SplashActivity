
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	        android:id="@+id/coach_frg_home_title_relative"
	        style="@style/custom_title_style" >

		<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/str_coachers_home_title"
			    android:textColor="@color/color_title_txt"
			    android:textSize="@dimen/txt_title_size"
			    android:layout_centerInParent="true" />

		<TextView
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:layout_alignParentRight="true"
			android:gravity="center"
			android:id="@+id/coach_frg_home_my_teaching_text"
			android:layout_width="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:layout_height="30dp"
			android:text="@string/str_coachers_apply_title"
			android:textSize="@dimen/txt_size_ml"
			android:textColor="@color/color_white"
			android:background="@drawable/my_teaching"/>
			
	</RelativeLayout>
	    
	<ScrollView
		android:layout_marginBottom="50dp"
	    android:layout_below="@+id/coach_frg_home_title_relative"
	    android:layout_width="fill_parent"
    	android:layout_height="match_parent"
		android:scrollbars="none"
	    >
	    <LinearLayout
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@color/color_white"
	        >

			<RelativeLayout
				android:layout_below="@+id/coach_frg_home_hobby_select_relative"
				android:id="@+id/coach_frg_home_pro_select_relative"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/coach_profession_bg"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_centerInParent="true"
					android:id="@+id/coach_frg_home_pro_price"
					android:gravity="center_horizontal"
					android:layout_width="250dp"
					android:layout_height="180dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="10dp"
					android:background="@drawable/coach_inner_bg"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textSize="@dimen/txt_size_ml"
						android:layout_marginTop="30dp"
						android:textColor="@color/gray"
						android:drawablePadding="5dp"
						android:drawableLeft="@drawable/coach_profesion_icon"
						android:text="@string/str_coachers_profesion"/>

					<TextView
						android:layout_marginTop="2dp"
						android:layout_width="130dp"
						android:layout_height="2dp"
						android:background="#f19149"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/txt_size_s"
						android:layout_marginTop="20dp"
						android:textColor="@color/gray"
						android:singleLine="true"
						android:ellipsize="end"
						android:text="严格审核  规范教学"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/txt_size_s"
						android:layout_marginTop="5dp"
						android:textColor="@color/gray"
						android:singleLine="true"
						android:ellipsize="end"
						android:text="品质保证  服务一流"/>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:gravity="center"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/coach_frg_home_pro_price_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textStyle="bold"
							android:textSize="@dimen/txt_title_size"
							android:singleLine="true"
							android:ellipsize="end"
							android:textColor="@color/color_title_bkg" />

						<TextView
							android:layout_marginLeft="5dp"
							android:text="@string/str_coach_price_unit"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="@dimen/txt_size_ml"
							android:singleLine="true"
							android:textColor="@color/gray"
							android:ellipsize="end"
							/>

					</LinearLayout>

				</LinearLayout>

				<RelativeLayout
					android:visibility="gone"
					android:layout_marginLeft="10dp"
					android:layout_toRightOf="@+id/coach_frg_home_pro_price"
					android:layout_alignParentRight="true"
					android:layout_width="wrap_content"
					android:layout_height="160dp"
					android:background="@drawable/coach_profession_bg"
					android:orientation="vertical">
					<ImageView
						android:layout_alignParentRight="true"
						android:layout_alignParentBottom="true"
						android:id="@+id/coach_frg_home_pro_select_image"
						android:background="@drawable/coach_invite_select_back"
						android:layout_width="90dp"
						android:layout_height="25dp"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="20dp"
						/>

				</RelativeLayout>

			</RelativeLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@+id/coach_frg_home_pro_select_relative"
				android:background="@drawable/divider1"></View>

			<RelativeLayout
				android:background="@drawable/coach_bg"
			    android:id="@+id/coach_frg_home_hobby_select_relative"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
					
			    <LinearLayout
					android:layout_centerInParent="true"
					android:gravity="center_horizontal"
					android:id="@+id/coach_frg_home_hobby_price"
					android:background="@drawable/coach_inner_bg"
			    	android:layout_width="250dp"
			    	android:layout_height="180dp"
			    	android:layout_marginLeft="20dp"
			    	android:layout_marginRight="20dp"
			    	android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textSize="@dimen/txt_size_ml"
						android:layout_marginTop="30dp"
						android:textColor="@color/gray"
						android:drawableLeft="@drawable/coach_hobby_ico"
						android:text="@string/str_coachers_hobby"/>

					<TextView
						android:layout_marginTop="2dp"
						android:layout_width="130dp"
						android:layout_height="2dp"
						android:background="#f19149"/>
			        
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/txt_size_s"
			            android:layout_marginTop="20dp"
						android:textColor="@color/gray"
						android:singleLine="true"
						android:ellipsize="end"
			            android:text="民间高手  卧虎藏龙 "/>
			        
					<TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
						android:textSize="@dimen/txt_size_s"
			            android:layout_marginTop="5dp"
						android:textColor="@color/gray"
						android:singleLine="true"
						android:ellipsize="end"
			            android:text="轻松教学  快乐交友"/>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:gravity="center"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/coach_frg_home_hobby_price_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textStyle="bold"
							android:textSize="@dimen/txt_title_size"
							android:singleLine="true"
							android:ellipsize="end"
							android:textColor="@color/color_title_bkg" />

						<TextView
							android:layout_marginLeft="5dp"
							android:text="@string/str_coach_price_unit"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="@dimen/txt_size_ml"
							android:singleLine="true"
							android:ellipsize="end"
							android:textColor="@color/gray"
							/>

					</LinearLayout>
			    
				</LinearLayout>
				
			     <RelativeLayout
					 android:visibility="gone"
					 android:layout_marginLeft="10dp"
					 android:layout_toRightOf="@+id/coach_frg_home_hobby_price"
					 android:layout_alignParentRight="true"
			    	 android:layout_width="wrap_content"
			    	 android:layout_height="160dp"
					 android:background="@drawable/coach_hobby_bg"
			    	 android:orientation="vertical">
			        <ImageView
						android:layout_alignParentRight="true"
						android:layout_alignParentBottom="true"
			            android:id="@+id/coach_frg_home_hobby_select_image"
						android:background="@drawable/coach_invite_select_back"
			            android:layout_width="90dp"
			            android:layout_height="25dp"
			            android:layout_marginRight="10dp"
			            android:layout_marginBottom="20dp"
			            />

				</RelativeLayout>
			    
			</RelativeLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@+id/coach_frg_home_hobby_select_relative"
				android:background="@drawable/divider1"></View>

			<LinearLayout
				android:background="@drawable/pin_bg"
				android:id="@+id/coach_frg_home_apply_relative"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true"
					android:background="@drawable/pin_dan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dp"
					android:layout_marginBottom="20dp"
					/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/txt_size_s"
						android:layout_marginTop="10dp"
						android:textColor="@color/gray"
						android:text="大家一起拼单，价格享7折"/>


			</LinearLayout>


			<LinearLayout
				android:visibility="gone"
				android:id="@+id/coach_frg_home_invited_coacher_linear"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
				android:layout_below="@+id/coach_frg_home_apply_relative">
			    
			    <View 
					android:id="@+id/coach_frg_home_divider"
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@drawable/divider1"/>
				<TextView
					 android:shadowRadius="5"

					 android:background="@color/color_tab_green"
					 android:textColor="#fff"
					 android:layout_width="wrap_content"
					 android:paddingLeft="5dp"
					 android:paddingRight="5dp"
					 android:gravity="center"
					 android:layout_height="25dp"
					 android:layout_marginTop="10dp"
					 android:textStyle="bold"
					 android:textSize="12sp"
					 android:text="最近约过的教练"/>


				<include
					android:layout_marginLeft="10dp"
			    	android:layout_marginTop="5dp"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	layout="@layout/coach_list_item"/>
			    
			</LinearLayout>
			
  		</LinearLayout>
	    
	</ScrollView>
   
	
</RelativeLayout>