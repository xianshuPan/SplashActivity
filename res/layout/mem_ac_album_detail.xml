<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        style="@style/custom_title_style"
        android:layout_alignParentTop="true" 
        android:id="@+id/mem_album_detail_title">
        <ImageButton
			android:id="@+id/mem_album_detail_topbar_back"
			style="@style/top_bar_btn_style"
			android:contentDescription="@null"
			android:layout_alignParentLeft="true"
			android:src="@drawable/xbtn_back" />
        <TextView
            android:id="@+id/mem_album_detail_page_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/color_title_txt"
		    android:textSize="@dimen/txt_title_size"
		    android:layout_centerInParent="true" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mem_album_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_below="@id/mem_album_detail_title"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>

