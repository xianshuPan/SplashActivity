<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/custom_ad_padding"
    android:paddingBottom="@dimen/custom_ad_padding"
    android:clickable="true"
    android:onClick="onLayoutSpaceClick" >

	<LinearLayout
	    android:id="@+id/comm_dialog_content_all"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/custom_ad_btn_margin_height" >
	    <TextView
	        android:id="@+id/comm_dialog_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="@dimen/btn_height"
	        android:background="@drawable/dialog_top_frame_bkg"
	        android:text="@string/app_name"
	        android:textSize="@dimen/txt_size_m"
	        android:padding="8dip"
	        android:clickable="true"
	        android:textColor="#999999"
	        android:gravity="center" />
	    <ListView
	        android:id="@+id/comm_dialog_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideInset"
            android:divider="@color/color_div_line"
            android:dividerHeight="@dimen/div_line_width"
            android:background="@drawable/dialog_bottom_frame_bkg"
            android:cacheColorHint="@android:color/transparent"
			android:listSelector="@android:color/transparent"
			android:fadingEdge="none"
			android:drawSelectorOnTop="false" />
	    
	</LinearLayout>
	
	<Button
	    android:id="@+id/comm_dialog_btn_cancel"
	    android:layout_marginTop="@dimen/custom_ad_btn_negative_height"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="@dimen/custom_ad_btn_height"
	    android:background="@drawable/frame_bkg"
	    android:text="@android:string/cancel"
        android:padding="8dip"
        android:textSize="@dimen/txt_size_m"
        android:textColor="@android:color/holo_blue_light"
	    android:onClick="onCancleBtnClick" />

</LinearLayout>
